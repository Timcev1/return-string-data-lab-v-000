<% @products.each do |product| %>
  <div><%= product.name %><br></div>
  <div id="description-<%= product.id %>"><%= truncate( product.description, separator: ' ') %></div><br>
  <div id="inventory-<%= product.id %>"></div><br>
  <button class="js-more" data-id="<%= product.id %>">More Info...</button>
  <br></br>
<% end %>

<script type="text/javascript" charset="utf-8">
  $(function () {
    $('.js-more').on('click', function () {
      var id = $(this).data('id');
      $.get("/products/" + id + "/description", function (description) {
        $('#body-' + id).text(description);
      });
      $.get("/products/" + id + "/inventory", function (inventory) {
        if (inventory === "true") {
          $('#inventory-' + id).text("Available")
        } else {
          $('#inventory-' + id).text("Sold Out")
        };
      });
    });
  });
</script>
